{
  "root": true,
  "ignorePatterns": [
    "dist/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.js",
        "*.mjs",
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "tsconfigRootDir": ".",
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@tylertech-eslint/recommended"
      ],
      "plugins": [
        "import"
      ],
      "rules": {
        "import/extensions": ["error", "ignorePackages"]
      }
    }
  ]
}
